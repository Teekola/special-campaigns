generator client {
   provider = "prisma-client-js"
   output   = "../src/generated/prisma"
}

datasource db {
   provider = "mongodb"
   url      = env("DATABASE_URL")
}

model Activation {
   id             String           @id @default(auto()) @map("_id") @db.ObjectId
   orderReference String
   type           ActivationType
   status         ActivationStatus @default(PENDING)
   email          String?
   course         String?
   createdAt      DateTime         @default(now())
   updatedAt      DateTime         @updatedAt

   // NOTE: Enforce manually that the user can not activate one for themselves and then
   // use the friend link for activating for themselves too
   // This is done by fetching activations with the orderReference and getting the existing email,
   // Which is the FOR_SELF email, that is unallowed then for the FOR_FRIEND link.

   @@unique([orderReference, type])
}

enum ActivationType {
   FOR_SELF
   FOR_FRIEND
}

enum ActivationStatus {
   PENDING
   COMPLETED
}
